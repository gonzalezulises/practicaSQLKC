SELECT *,
    CASE 
        WHEN calls_vdn_label LIKE 'ATC%' THEN 'FRONT'
        WHEN calls_vdn_label LIKE 'TECH%' THEN 'TECH'
        WHEN calls_vdn_label = 'ABSORPTION' THEN 'ABSORPTION'
        ELSE 'RESTO'
    END AS vdn_aggregation
FROM ivr_detail;



-- guardo la actualizacion
ALTER TABLE ivr_detail ADD COLUMN vdn_aggregation VARCHAR(20);

-- Actualizar la tabla ivr_detail con el n√∫mero de cuenta identificado
UPDATE ivr_detail
SET vdn_aggregation = 
    CASE 
        WHEN calls_vdn_label LIKE 'ATC%' THEN 'FRONT'
        WHEN calls_vdn_label LIKE 'TECH%' THEN 'TECH'
        WHEN calls_vdn_label = 'ABSORPTION' THEN 'ABSORPTION'
        ELSE 'RESTO'
    END;