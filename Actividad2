-- tabla Alumno
CREATE TABLE Alumno (
  alumno_id SERIAL PRIMARY KEY,
  nombre VARCHAR(50) NOT NULL,
  apellido VARCHAR(50) NOT NULL,
  email VARCHAR(100) NOT NULL,
  telefono VARCHAR(20) NOT NULL,
  direccion VARCHAR(100) NOT NULL
);

-- tabla Bootcamp
CREATE TABLE Bootcamp (
  bootcamp_id SERIAL PRIMARY KEY,
  nombre VARCHAR(50) NOT NULL,
  descripcion VARCHAR(200) NOT NULL,
  fechaInicio DATE NOT NULL,
  fechaFin DATE NOT NULL
);

-- tabla Modulo
CREATE TABLE Modulo (
  modulo_id SERIAL PRIMARY KEY,
  nombre VARCHAR(50) NOT NULL,
  descripcion VARCHAR(200) NOT NULL,
  fechaInicio DATE NOT NULL,
  bootcamp_id INTEGER NOT NULL,
  FOREIGN KEY (bootcamp_id) REFERENCES Bootcamp(bootcamp_id)
);

-- tabla Inscripcion
CREATE TABLE Inscripcion (
  inscripcion_id SERIAL PRIMARY KEY,
  alumno_id INTEGER NOT NULL,
  bootcamp_id INTEGER NOT NULL,
  fechaInscripcion DATE NOT NULL,
  estadoInscripcion VARCHAR(20) NOT NULL,
  FOREIGN KEY (alumno_id) REFERENCES Alumno(alumno_id),
  FOREIGN KEY (bootcamp_id) REFERENCES Bootcamp(bootcamp_id)
);

-- tabla Pago
CREATE TABLE Pago (
  pago_id SERIAL PRIMARY KEY,
  inscripcion_id INTEGER NOT NULL,
  fechaPago DATE NOT NULL,
  montoPago DECIMAL(10, 2) NOT NULL,
  FOREIGN KEY (inscripcion_id) REFERENCES Inscripcion(inscripcion_id)
);

-- tabla Profesor
CREATE TABLE Profesor (
  profesor_id SERIAL PRIMARY KEY,
  nombre VARCHAR(50) NOT NULL,
  apellido VARCHAR(50) NOT NULL,
  email VARCHAR(100) NOT NULL,
  telefono VARCHAR(20) NOT NULL,
  direccion VARCHAR(100) NOT NULL,
  modulo_id INTEGER NOT NULL,
  FOREIGN KEY (modulo_id) REFERENCES Modulo(modulo_id)
);